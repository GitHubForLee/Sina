<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lee.myweibo.widgets.CircleImageView
            android:id="@+id/iv_userIcon"
            android:layout_width="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="50dp" />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:id="@+id/tv_userName"
            android:text="名称"
            android:textColor="@color/colorOrange"
            android:alpha="0.5"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:text="时间"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@+id/iv_userIcon"
            android:textSize="12sp"
            android:id="@+id/tv_timeAndFrom"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tv_content"
            android:layout_alignLeft="@id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_userIcon"
            android:text="类似QQ空间，微信朋友圈，微博主页等，展示图片的九宫格控件，"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignLeft="@id/tv_userName"
            android:layout_below="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorDivider"/>
    </RelativeLayout>


</LinearLayout>